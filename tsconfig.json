{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "allowJs": true,
    "allowUnreachableCode": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@Public": [
        "/public/*"
      ],
      "@Components": [
        "src/common/components"
      ],
      "@Components/*": [
        "src/common/components/*"
      ],
      "@Views": [
        "src/views"
      ],
      "@Views/*": [
        "src/views/*"
      ],
      "@Store": [
        "src/store"
      ],
      "@Store/*": [
        "src/store/*"
      ],
      "@Models/*": [
        "src/models/*"
      ],
      "@Utils": [
        "src/common/utils"
      ],
      "@Utils/*": [
        "src/common/utils/*"
      ]
    },
    "incremental": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "pages/**/*",
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
